<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
<h1>Wyszukiwarka filmów:</h1>

<form method="get" action="@Url.Action("Search", "Filmy")">
    <input type="text" name="Search" placeholder="Szukaj po tytule">
    <button type="submit">Szukaj</button>
</form>

@if (Model != null && Model.Count > 0)
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Nazwa Filmu</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var film in Model)
            {
                <tr>
                    <td>@Html.ActionLink(film.Tytul, "Show", "Filmy", new { id = film.Id })</td>
                </tr>
            }
        </tbody>
    </table>
    <a href="@Url.Action("Search", "Filmy")" class="btn btn-primary">Powrót</a>
}

